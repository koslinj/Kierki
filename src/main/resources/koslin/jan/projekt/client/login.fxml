<VBox fx:id="root" alignment="TOP_CENTER" prefWidth="350.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="koslin.jan.projekt.client.LoginController">

    <Label style="-fx-font-size: 20;" text="REJESTRACJA" />
    <Label text="Nazwa użytkownika">
      <VBox.margin>
         <Insets />
      </VBox.margin></Label>
    <TextField fx:id="usernameInputRegister">
      <VBox.margin>
         <Insets top="-10.0" />
      </VBox.margin></TextField>
    <Label text="Hasło" />
    <TextField fx:id="passwordInputRegister">
      <VBox.margin>
         <Insets top="-10.0" />
      </VBox.margin></TextField>
    <Button onAction="#handleSubmitRegister" text="Zarejestruj się">
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>
   <Label style="-fx-font-size: 20;" text="LOGOWANIE">
      <VBox.margin>
         <Insets top="40.0" />
      </VBox.margin>
   </Label>
    <Label text="Nazwa użytkownika">
      <VBox.margin>
         <Insets />
      </VBox.margin></Label>
    <TextField fx:id="usernameInputLogin">
      <VBox.margin>
         <Insets top="-10.0" />
      </VBox.margin></TextField>
    <Label text="Hasło" />
    <TextField fx:id="passwordInputLogin">
      <VBox.margin>
         <Insets top="-10.0" />
      </VBox.margin></TextField>
    <Button onAction="#handleSubmitLogin" text="Zaloguj się" />

    <Label fx:id="errorLabel" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
